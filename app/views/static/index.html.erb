    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-4">Gossips</h1>
      <p class="lead">Racontez nous ce qu'il se passe chez vous
                  <a href="/gossips/new" class="btn btn-success">Go !</a>
                  </p>
    </div>

    <div class="container">    
      <% flash.each do |type, msg| %>
      <div class="alert alert-info">
          <%= msg %>
      </div>
      <% end %>
      <div class="card-deck mb-3 text-center">
        <% @gossips.each do |g| %>
        <div class="card mb-4 box-shadow">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal"><%= g.user.first_name %></h4>
          </div>
          <div class="card-body">
            <h2 class="card-title pricing-card-title"><%= g.title %></h2>
            <ul class="list-unstyled mt-3 mb-4">
              <li><%= g.content %></li>
            </ul>
            <a href="<%= gossip_path(g.id) %>" class="btn btn-info">Lire</a>
            <% if (current_user == g.user) %>
            <a href="<%= edit_gossip_path(g.id) %>" class="btn btn-warning">Editer</a>
            <a href="<%= gossip_path(g.id) %>" class="btn btn-danger" data-confirm="Ãªtes-vous sur?" data-method="DELETE">Supprimer le gossip</a>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>  


